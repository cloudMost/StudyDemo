<!--
.     IE下[^\n]，其它[^\n\r]  匹配除换行符之外的任何一个字符
\d    [0-9]                   匹配数字
\D    [^0-9]                  匹配非数字字符
\s    [ \n\r\t\f\x0B]         匹配一个空白字符
\S    [^ \n\r\t\f\x0B]        匹配一个非空白字符
\w    [a-zA-Z0-9_]            匹配字母数字和下划线
\W    [^a-zA-Z0-9_]           匹配除字母数字下划线之外的字符    
-->
<script type="text/template"  >
    //斜杠是讲正则表达式包裹的意思
    //RegExp构造函数有两个参数
    //第一个参数是正则表达式
    //第二个参数为可选标志
    /*
    可选标志可以为
    g (全文查找)
    i (忽略大小写)
    m  (多行查找)
    */


    var re = /you/;
    var s = "you";
    console.log(re.test(s));//true
    s = "h";
    console.log(re.test(s));//false
    s = "YOU";
    console.log(re.test(s));//false
    re = /you/i;
    console.log(re.test(s));//true

    s = "You have a boy you!!!";
    console.log(re.test(s));

    //脱字符(^) 代表字符开始位置
    re = /^you/i;
    console.log("脱字符测试:" + re.test(s));

    //$ 表示字符结束位置
    re = /^you$/i;
    console.log("$字符测试:"+re.test(s));

    //[]匹配指定范围内的任意字符
    re = /^[a-z]$/i;
    s = "you have";
    console.log("[]测试:"+re.test(s));




</script>
